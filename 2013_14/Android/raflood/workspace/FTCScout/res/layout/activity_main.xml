<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <EditText android:id="@+id/teamName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/team_name_prompt" />

    <EditText
        android:id="@+id/teamNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamName"
        android:layout_alignParentLeft="true"
        android:hint="@string/team_number_prompt"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/teamName"
        android:layout_marginRight="21dp"
        android:onClick="sendMessage"
        android:text="@string/button_send" />

    <NumberPicker
        android:id="@+id/NumberPicker01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/teamNumber"
        android:layout_below="@+id/teamNumber"
        android:layout_marginTop="44dp"
        android:width="100dip" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NumberPicker01"
        android:layout_below="@+id/teamNumber"
        android:layout_marginTop="22dp"
        android:text="Points Scored" />

    <NumberPicker
        android:id="@+id/NumberPicker02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/NumberPicker01"
        android:layout_toRightOf="@+id/teamNumber"
        android:width="100dip" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NumberPicker01"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dp"
        android:text="Autonomous score" />

</RelativeLayout>