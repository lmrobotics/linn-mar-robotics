<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android1:columnCount="16"
    tools:context=".MainActivity" >

    <CheckBox
        android1:id="@+id/Truss"
        android1:layout_column="0"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="10dp"
        android1:text="Truss" />

    <CheckBox
        android1:id="@+id/2_assist"
        android1:layout_column="0"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="35dp"
        android1:text="2 Assist" />

    <TextView
        android1:id="@+id/Autonomous"
        android1:layout_column="0"
        android1:layout_gravity="left|top"
        android1:layout_row="0"
        android1:layout_marginTop="0dp"
        android1:text="Autonomous"
        android1:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android1:id="@+id/3_assist"
        android1:layout_column="0"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="60dp"
        android1:text="3 Assist" />

    <CheckBox
        android1:id="@+id/Mobility_Bonus"
        android1:layout_column="0"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="85dp"
        android1:text="Mobility Bonus" />

    <CheckBox
        android1:id="@+id/Hot_Goals"
        android1:layout_column="0"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="110dp"
        android1:text="Hot Goals" />

    <CheckBox
        android1:id="@+id/Auto_Bonus"
        android1:layout_column="0"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="135dp"
        android1:text="Autonomous Bonus" />

    <CheckBox
        android1:id="@+id/Foul"
        android1:layout_column="0"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="160dp"
        android1:text="Foul" />

    <CheckBox
        android1:id="@+id/Tech_Foul"
        android1:layout_column="0"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="185dp"
        android1:text="Technical Foul" />

    <CheckBox
        android1:id="@+id/Mechanical_Problems"
        android1:layout_column="0"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="210dp"
        android1:text="Mechanical Problems" />

    <CheckBox
        android1:id="@+id/Blocked_Shots"
        android1:layout_column="0"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="235dp"
        android1:text="Blocked Shots" />

    <EditText
        android1:id="@+id/Comments_Text"
        android1:layout_column="0"
        android1:layout_gravity="left|bottom"
        android1:layout_row="3"
        android1:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android1:id="@+id/Comments"
        android1:layout_column="0"
        android1:layout_gravity="left|bottom"
        android1:layout_row="3"
        android1:text="Comments"
        android1:layout_marginBottom="50dp"
        android1:textAppearance="?android:attr/textAppearanceLarge" />
    
     <TextView
        android1:id="@+id/Teli-op"
        android1:layout_column="2"
        android1:layout_gravity="left|bottom"
        android1:layout_row="0"
        android1:layout_marginTop="0dp"
        android1:text="Teli-op"
        android1:textAppearance="?android:attr/textAppearanceLarge" />
     
    <CheckBox
        android1:id="@+id/Truss_T"
        android1:layout_column="2"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="10dp"
        android1:text="Truss" />

    <CheckBox
        android1:id="@+id/2_assist_T"
        android1:layout_column="2"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="35dp"
        android1:text="2 Assist" />

    <CheckBox
        android1:id="@+id/3_assist_T"
        android1:layout_column="2"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="60dp"
        android1:text="3 Assist" />

    <CheckBox
        android1:id="@+id/Mobility_Bonus_T"
        android1:layout_column="2"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="85dp"
        android1:text="Mobility Bonus" />

    <CheckBox
        android1:id="@+id/Hot_Goals_T"
        android1:layout_column="2"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="110dp"
        android1:text="Hot Goals" />

    <CheckBox
        android1:id="@+id/Auto_Bonus_T"
        android1:layout_column="2"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="135dp"
        android1:text="Autonomous Bonus" />

    <CheckBox
        android1:id="@+id/Foul_T"
        android1:layout_column="2"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="160dp"
        android1:text="Foul" />

    <CheckBox
        android1:id="@+id/Tech_Foul_T"
        android1:layout_column="2"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="185dp"
        android1:text="Technical Foul" />

    <CheckBox
        android1:id="@+id/Mechanical_Problems_T"
        android1:layout_column="2"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="210dp"
        android1:text="Mechanical Problems" />

    <CheckBox
        android1:id="@+id/Blocked_Shots_T"
        android1:layout_column="2"
        android1:layout_gravity="left|top"
        android1:layout_row="3"
        android1:layout_marginTop="235dp"
        android1:text="Blocked Shots" />

    <EditText
        android1:id="@+id/Comments_Text_T"
        android1:layout_column="2"
        android1:layout_gravity="left|bottom"
        android1:layout_row="3"
        android1:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android1:id="@+id/Comments_T"
        android1:layout_column="2"
        android1:layout_gravity="left|bottom"
        android1:layout_row="3"
        android1:text="Comments"
        android1:layout_marginBottom="50dp"
        android1:textAppearance="?android:attr/textAppearanceLarge" />

    <NumberPicker
        android1:id="@+id/Low_Goal"
        android1:layout_column="4"
        android1:layout_gravity="left|top"
        android1:layout_marginLeft="0dp"
        android1:layout_marginTop="20dp"
        android1:layout_row="3" />

    <NumberPicker
        android1:id="@+id/High_Goal"
        android1:layout_column="4"
        android1:layout_gravity="left|top"
        android1:layout_marginLeft="100dp"
        android1:layout_marginTop="20dp"
        android1:layout_row="3" />

    <NumberPicker
        android1:id="@+id/Catches"
        android1:layout_column="4"
        android1:layout_gravity="left|top"
        android1:layout_marginLeft="200dp"
        android1:layout_marginTop="20dp"
        android1:layout_row="3" />

    <TextView
        android1:id="@+id/Low_Goal_Lable"
        android1:layout_column="4"
        android1:layout_gravity="left|top"
        android1:layout_marginLeft="0dp"
        android1:layout_row="3"
        android1:text="Low Goals" />

    <TextView
        android1:id="@+id/High_Goal_Lable"
        android1:layout_column="4"
        android1:layout_gravity="left|top"
        android1:layout_marginLeft="100dp"
        android1:layout_row="3"
        android1:text="High Goals" />

    <TextView
        android1:id="@+id/Catches_Lable"
        android1:layout_column="4"
        android1:layout_gravity="left|top"
        android1:layout_marginLeft="200dp"
        android1:layout_row="3"
        android1:text="Catches" />
    
     <Button
        android:id="@+id/button"
        android1:layout_column="5"
        android1:layout_row="1"
        android1:layout_columnSpan="2"
        android1:layout_gravity="left|top"
        android:onClick="sendMessage"
        android:text="button_send" />

</GridLayout>