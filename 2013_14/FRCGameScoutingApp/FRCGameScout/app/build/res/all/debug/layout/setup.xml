<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bc"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Setup"
        android:id="@+id/setuptext"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/matchID"
        android:layout_row="1"
        android:layout_column="1"
        android:text="Match ID"
        android:layout_below="@+id/setuptext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="250dp"
        android:layout_marginTop="60dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/teamNo"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/matchID"
        android:layout_alignStart="@+id/matchID"
        android:layout_marginTop="120dp"
        android:text="Team Number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Before scouting the match:\n   Make sure all data here is correct \n   Ensure that the data from last match is gone"
        android:id="@+id/textView"
        android:layout_below="@+id/matchID"
        android:layout_toRightOf="@+id/setuptext" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is this match being replayed?"
        android:id="@+id/matchReplay"
        android:checked="false"
        android:layout_marginLeft="65dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/matchID"
        android:layout_alignStart="@+id/matchID" />

</RelativeLayout><!-- From: file:/C:/Robotics/2013_14/FRCGameScoutingApp/FRCGameScout/app/src/main/res/layout/setup.xml -->